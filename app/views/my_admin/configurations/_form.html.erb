<div class="alert alert-info">
	<h4>Informação!</h4>
	<p>Clique nos valores abaixo para editar as configurações</p>
</div>

<div class="form-horizontal form-bordered">

	<div class="box">
		<div class="box-title">
			<h3><i class="icon-edit"></i>Configurações</h3>
		</div>

		<div class="box-content nopadding">
		
			<% @condigurations.each do |configuration| %>
			
				<div class="control-group">
					<%= label_tag configuration.key, configuration.name, :class => "control-label" %>

					<div class="controls">
						<%= config_field_content(configuration) %>
						<%= content_tag(:code, configuration.hint, :class => "help-block") unless configuration.hint.blank? %>
					</div>
				</div>
			
			<% end %>
		
		</div>
	</div>

</div>