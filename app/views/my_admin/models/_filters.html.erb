<% unless @model.my_admin.filters.blank? %>

	<div class="row-fluid">
		<div class="span12">
			<div class="box box-bordered">
			
				<div class="box-title">
					<h3>
						<i class="icon-search"></i>
						Filtrar <%= @model.title_plural %>
					</h3>
					<div class="actions">
						<a class="btn btn-mini content-slideUp" href="#">
							<i class="icon-angle-<%= params[@model.underscore].blank? ? "down" : "up" %>"></i>
						</a>
					</div>
				</div>
				<% par =  %>
				<div class="box-content nopadding" style="<%= 'display:none' if params[@model.underscore].blank? %>">

				  <%= form_tag(url, :class => "form-horizontal form-column form-bordered", :method => :get) do %>

				  		<%= hidden_field_tag :per_page, params[:per_page] %>
				  		<%= hidden_field_tag :order, params[:order] %>
				  		<%= hidden_field_tag :order_by, params[:order_by] %>

				      <% @model.my_admin.filters.each do |field| %>	
				      	<%= filter_field_struct(@application, @model, field, @filter_object) %>
				      <% end %>

							<div class="form-actions">
								<%= submit_tag "Filtrar", :class => "btn btn-primary" %> 
							</div>	
    
				  <% end %>

				</div>

			</div>
		</div>
	</div>

<% end %>